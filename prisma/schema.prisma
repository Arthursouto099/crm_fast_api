generator client {
    provider   = "prisma-client"
  output     = "../generated"
}


datasource db {
  provider = "postgresql"
}

enum Roles {
  ADMIN
  COLLABOR
  GUEST
}

model User {
  id_user  String @id @default(uuid())
  name     String
  role     Roles  @default(GUEST)
  email    String @unique
  password String
}
